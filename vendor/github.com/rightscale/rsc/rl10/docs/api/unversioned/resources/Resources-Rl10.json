          "attributes": {
            "right_script": {
              "description": "Name of script",
              "type": {
                "name": "String",
                "id": "Attributor-String"
              },
              "source": "query"
            },
            "right_script_id": {
              "description": "Id of script",
              "type": {
                "name": "Integer",
                "id": "Attributor-Integer"
              },
              "source": "query"
            },
            "arguments": {
              "description": "Script argument values",
              "options": {
